@model List<MyContacts.Models.Contact>
@{
    ViewData["Title"] = "Contact List";
}

<a class="btn btn-primary" asp-controller="Contact" asp-action="Add">Add Contact</a>

@if (Model != null && Model.Any())
{
    <table class="table">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>@Html.DisplayNameFor(model => model[0].Email)</th>
            <th>Phone Number</th>
            <th>Gategory</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    <a class="btn btn-secondary" asp-controller="Contact" asp-action="Details" asp-route-id="@item.ContactId" asp-route-slug="@item.Slug">Details</a> |
                    <a class="btn btn-secondary" asp-controller="Contact" asp-action="Edit" asp-route-id="@item.ContactId">Edit</a> |
                    <a class="btn btn-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@item.ContactId">Delete</a>

                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No contacts available.</p>
}
